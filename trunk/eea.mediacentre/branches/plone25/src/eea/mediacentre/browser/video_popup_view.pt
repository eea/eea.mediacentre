<metal:page define-macro="master"><metal:doctype define-slot="doctype"><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"></metal:doctype>
<metal:block use-macro="here/global_defines/macros/defines" />
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="plone">

<head>
    <script tal:attributes="src string:$portal_url/++resource++jquery-1.3.2.js" type="text/javascript"></script>
    <script tal:attributes="src string:$portal_url/++resource++jquery.flashembed-0.31.js" type="text/javascript"></script>
    <script tal:attributes="src string:$portal_url/++resource++jquery.ui-1.7.js" type="text/javascript"></script>
    <script tal:attributes="src string:$portal_url/++resource++jquery.reflect.js" type="text/javascript"></script>
    <script tal:attributes="src string:$portal_url/eea-mediacentre.js" type="text/javascript"></script>
    <script tal:attributes="src string:$portal_url/video_popup_view.js" type="text/javascript"></script>
    <style type="text/css" tal:content="string:@import url(${portal_url}/++resource++jquery.ui.theme/jquery-ui-1.7.custom.css);"></style>
    <style type="text/css" tal:content="string:@import url(${portal_url}/video_popup_view.css);"></style>
    <metal:css tal:define="css nocall:here/renderAllTheStylesheets|nothing">
       <tal:block condition="nocall:css">
              <metal:block metal:use-macro="css/macros/cssrenderer">
                <!-- Fetch stylesheets from the CSS Registry -->
              </metal:block>
        </tal:block>
    </metal:css>
</head>    

<body class="video_popup_view">

<h1 tal:content="context/Title">Video Title</h1>

<metal:video>
    <div tal:replace="structure view/widgets/media_player"></div>
</metal:video>

<div style="clear:both"></div>

<div id="tabs">
    <ul>
        <li><a class="tabnav" href="#tab-vids" i18n:translate="videos-link">Related videos</a></li>
        <li><a class="tabnav" href="#tab-docs" i18n:translate="news-link">News and articles</a></li>
        <li><a class="tabnav" href="#tab-desc" i18n:translate="about-this-video-link">About this video</a></li>
    </ul>
    <div id="tab-desc" tal:define="video_info context/@@video_view">
       <div class="discreet"><tal:publishdate metal:use-macro="here/document_byline/macros/publishdate">
       Show the publishdate only (effective date)
       </tal:publishdate></div>
        <p id="vid-desc" tal:content="context/Description"></p>
        <tal:author condition="video_info/author">
            <dt>Author:</dt>
            <dd tal:content="video_info/author">Author</dd>
        </tal:author>
    
        
        <div tal:content="structure video_info/rich_description" tal:condition="video_info/rich_description">
            Rich Description
        </div>
    </div>
    <div id="tab-vids">
        <div id="vids-slider" class="slider" tal:define="nr_items python:25; fill_limit python:25; imgsize string:image_tile">
            <div metal:use-macro="here/document_relateditems/macros/auto-context">
                show auto related items if they exist
            </div>
            <img class="slidernav larrow" src="++resource++video-slider-images/larrow_on.png"/>
            <img class="slidernav rarrow" src="++resource++video-slider-images/rarrow_on.png"/>
        </div>
    </div>
    <div id="tab-docs">
        <div id="docs-slider" class="slider" tal:define="nr_items python:25; imgsize string:image_tile; portal_type python:['Highlight', 'PressRelease', 'Article']">
            <div metal:use-macro="here/document_relateditems/macros/auto-context">
                show auto related items if they exist
            </div>
            <img class="slidernav larrow" src="++resource++video-slider-images/larrow_on.png"/>
            <img class="slidernav rarrow" src="++resource++video-slider-images/rarrow_on.png"/>
        </div>
    </div>
</div>

<p id="vid-title" tal:content="context/Title">Video Title</p>
<a href="#" id="bookmark-link" class="footer" tal:define="url context/absolute_url" tal:attributes="href string:$url/view" i18n:translate="video-bookmark-link">Link</a>
<a href="#" id="vid-dl-link" class="footer" tal:attributes="href context/absolute_url" i18n:translate="video-download-link">Download</a>
<a href="#" id="more-vids-link" class="footer" tal:attributes="href string:$local_site/multimedia" i18n:translate="mediacentre-link">More videos</a>

<script type="text/javascript">
var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
</script>
<script type="text/javascript">
var pageTracker = _gat._getTracker("UA-184389-1");
pageTracker._setDomainName("eea.europa.eu");
pageTracker._initData();
pageTracker._trackPageview();
</script>

</body>
</html>
</metal:page>
