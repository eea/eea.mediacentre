<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="p4a.video">

      <head> 
      
<metal:headslot fill-slot="head_slot">
    <style type="text/css">
    .media-player {
        width: auto;
    }
    </style>
</metal:headslot>

<metal:cssslot fill-slot="style_slot">
    <link rel="stylesheet" href="video.css"
          tal:attributes="href string:$portal_url/++resource++videostyles/video.css"
        />
</metal:cssslot>
      </head>  
<body>


<div metal:fill-slot="content-core"
     tal:define="video_info context/@@video_view;
                 context_url string:${context/absolute_url};
                 mime_type context/content_type;
     ">
    <tal:main-macro metal:define-macro="main" 
           tal:define="size python:context.getObjSize(context);">

        <div id="objmetadata_pbwidgets_wrapper">
            <div id="playback_widgets">

            <a href="" id="download_icon" class="widget_icon"
                  tal:attributes="href string:$context_url" title="Download file"></a>

            </div>          
                   
            <div tal:replace="structure view/widgets/media_player"></div>

            <!-- Display metadata about the video -->
            <div tal:attributes="style string:margin:auto;; width:${video_info/width_incl_player}px">
              <dl class="media-single-item">
                <tal:time condition="video_info/duration">
                    <dt i18n:translate="label_time">Time:</dt>
                    <dd tal:content="video_info/duration">8:30</dd>
                </tal:time>
                <dt class="type-video" i18n:translate="label_type">Media Type:</dt>
                <dd class="type-video" tal:content="video_info/media_types">Media type</dd>
                <tal:author condition="video_info/author">
                    <dt>Author:</dt>
                    <dd tal:content="video_info/author">Author</dd>
                </tal:author>
                <dt>Published:</dt>
                <dd tal:content="video_info/published_date">Date</dd>
              </dl>
              <div>&nbsp;</div>
            </div>
        </div>

        <div tal:content="structure video_info/rich_description"
             tal:condition="video_info/rich_description"
             class="richDocumentDescription">
            Description
        </div>

        <div class="visualClear">&nbsp;</div>

    </tal:main-macro>
    <!-- Mark this view as being a main view template /-->
    <tal:block tal:define="global isViewTemplate python:True"/>
</div>
</body>

</html>
