<div metal:define-macro="playlist"
     id="playlist-highlights"
     class="highlights"
     tal:define="hide_listing python: True;
                 hide_album python: False;
                 more_href string:playlist;">

    <div class="gallery-ajax">
        <div class="gallery-album">

        <h3 i18n:translate="">An introduction to the EEA (8)</h3>

        <tal:multimedia metal:define-macro="playlists" tal:define="vid_ids python:['JslltUEXdZA', 'GMxztMiflSY', '9rOoSb2rsBg', '1ItWObSY-KI', 'Pr16svhkJHw', 'eFocDIyMWJ4', 'yF63gXAPMzU', 'NVnn2dsLnXI'];
        vids_title python:['A general introduction to the EEA', 'In the EU', 'Core Ouputs', 'Strategy', 'Global Connections', 'Communication', 'New Technologies', 'Governance' ];">

        <tal:vids tal:repeat="video_id vid_ids">
            <div class="photoAlbumEntry" tal:define="numb repeat/video_id/number; video_title python:vids_title[numb - 1]">
                <a  tal:attributes="href string:http://www.youtube.com/embed/${video_id}?autoplay=1; title video_title" class="video-fancybox">
                  <span class="photoAlbumEntryWrapper">
                      <img  tal:attributes="src string:http://i3.ytimg.com/vi/${video_id}/default.jpg; alt video_title; title video_title;">
                  </span>
                  <span class="photoAlbumEntryTitle" tal:content="video_title">Green tip - the log</span>
                </a>
             </div>
        </tal:vids>

        </tal:multimedia>
        </div>
    </div>
</div>
